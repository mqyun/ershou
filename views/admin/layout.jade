doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(http-equiv='X-UA-Compatible', content='ie=edge')
    title= title
    link(rel="icon" href="/user/images/logo.png" type="image/x-icon")
    link(href='/bootstrap/css/bootstrap.min.css', rel='stylesheet')
    link(href='/bootstrap/css/bootstrap-reset.css', rel='stylesheet')
    link(href='/bootstrap/assets/font-awesome/css/font-awesome.css', rel='stylesheet')
    link(href='/bootstrap/assets/jquery-easy-pie-chart/jquery.easy-pie-chart.css', rel='stylesheet', type='text/css', media='screen')
    link(rel='stylesheet', href='/bootstrap/css/owl.carousel.css', type='text/css')
    link(href='/bootstrap/css/style.css', rel='stylesheet')
    link(href='/bootstrap/css/style-responsive.css', rel='stylesheet')
    link(href='/public/css/public.css', rel='stylesheet')
    link(href='/public/css/sweet-alert.css', rel='stylesheet')
    link(href='/public/datetimepicker/bootstrap-datetimepicker.min.css', rel='stylesheet')
    script(src='/public/js/sweet-alert.min.js')
    block css
  body
    mixin topnav
      header.header.white-bg
        .sidebar-toggle-box
          .icon-reorder.tooltips(data-original-title='Toggle Navigation', data-placement='right')
        a.logo(href='javascript:;')
          | 岭师跳蚤市场
          span(style='color: #1874CD; font-weight: bold;') 后台管理
        .top-nav
          ul.nav.pull-right.top-menu
            li.dropdown
              a.dropdown-toggle(data-toggle='dropdown', href='javascript:;')
                span.username 欢迎您，#{nicheng}
                b.caret
              ul.dropdown-menu.extended.logout
                li
                  a(href='/admin/logout')
                    i.icon-key
                    |  退出
    mixin leftnav
      aside
        #sidebar.nav-collapse
          ul.sidebar-menu
            li.leftli-fenlei
              a(href='/admin/fenlei')
                i.icon-book
                span 物品分类管理
            li.leftli-wupin
              a(href='/admin/wupin')
                i.icon-book
                span 物品管理
    // 导航
    block nav
    // 内容
    block content
    // 页脚
    block footer

  script(src='/bootstrap/js/jquery.js')
  script(src='/bootstrap/js/jquery-1.8.3.min.js')
  script(src='/bootstrap/js/bootstrap.min.js')
  script(src='/bootstrap/js/jquery.scrollTo.min.js')
  script(src='/bootstrap/js/jquery.nicescroll.js', type='text/javascript')
  script(src='/bootstrap/js/jquery.sparkline.js', type='text/javascript')
  script(src='/bootstrap/assets/jquery-easy-pie-chart/jquery.easy-pie-chart.js')
  script(src='/bootstrap/js/owl.carousel.js')
  script(src='/bootstrap/js/jquery.customSelect.min.js')
  script(src='/bootstrap/js/common-scripts.js')
  script(src='/bootstrap/js/sparkline-chart.js')
  script(src='/bootstrap/js/easy-pie-chart.js')
  script(src='/public/layer/layer.js')
  script(src='/public/datetimepicker/moment-with-locales.js')
  script(src='/public/datetimepicker/bootstrap-datetimepicker.min.js')
  script(src='/public/js/public.js')
  script(src='/ershou/admin.js')
  block js
